<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.1.RELEASE</version>
        <relativePath/>
        <!--        lookup parent from repository -->
    </parent>
    <groupId>com.idea</groupId>
    <artifactId>sass</artifactId>
    <version>1.0.0</version>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <modules>
        <module>sass-web</module>
        <module>sass-service</module>
        <module>sass-domain</module>
        <module>sass-dal</module>
        <module>sass-integration</module>
        <module>sass-config</module>
        <module>sass-common</module>
    </modules>
    <!--    项目名-->
    <name>sass</name>
    <!--    项目描述-->
    <description>description</description>
    <!--    强烈建议你将依赖版本在这里控制,方便后期维护-->
    <properties>
        <org.springframework.boot.version>2.3.1.RELEASE</org.springframework.boot.version>
        <com.baomidou.version>3.4.2</com.baomidou.version>
    </properties>
    <!--    SpringBoot应用添加到全局中,每个模块都要用到-->
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
    </dependencies>
    <!--    【建议】父pom才具有依赖版本管理的能力,父pom控制version,子pom只用引入即可-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-web</artifactId>
                <version>${org.springframework.boot.version}</version>
            </dependency>
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-annotation</artifactId>
                <version>${com.baomidou.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <!--    指定使用maven打包-->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!--                    默认关掉单元测试 -->
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
            <!--            加入此插件, deploy时将源码一并发布至nexus, 这样调用方就可以下载源码看到接口注释啦 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>